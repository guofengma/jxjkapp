
  <view id="page-index-order-info">
    
  <view class="comp-order-info">
    <view class="info-items">
      <block wx:for="{{ $OrderInfo$ITEMS }}" wx:for-index="$OrderInfo$index" wx:for-item="$OrderInfo$item" wx:key="$OrderInfo$index">
        <view class="info-item flex--vcenter--sb">
          <text class="item-label">{{ $OrderInfo$item.label }}</text>
          <picker value="{{ $OrderInfo$pickedIndex[$OrderInfo$item.picker.valueBind] }}" range="{{ $OrderInfo$lists[$OrderInfo$item.picker.rangeBind] }}" range-key="label" bindchange="$OrderInfo$handlePickerChange" data-wpyhandlepickerchange-a="{{ $OrderInfo$item.picker.valueBind }}" data-wpyhandlepickerchange-b="{{ $OrderInfo$item.picker.rangeBind }}">
            <view class="item-value">
              <text>{{ $OrderInfo$pickeds[$OrderInfo$item.picker.valueBind] }}</text>
              <view class="arrow-rt"/>
            </view>
          </picker>
        </view>
      </block>
    </view>
    <view class="submit-btn-wrap flex--hcenter">
      <button class="submit-btn flex--center" bindtap="submit">
        确认提交
      </button>
    </view>
  </view>

    <view class="success-dialog {{ successDialogVisible ? '' : 'hidden' }}">
      <view class="success-dialog__mask">
      </view>
      <view class="success-dialog__inner">
        <image src="../assets/images/success-order.png" style="width: 100%; height: 260rpx;"/>
        <view style="margin-top: 98rpx;">
          <image src="../assets/images/success-order-tip.png" style="width: 347rpx; height: 30rpx; margin: auto;"/>
        </view>
        <view class="btn-wrap flex--center">
          <button class="to-vip-btn flex--center">前往VIP服务查看</button>
        </view>
      </view>
      <view class="success-dialog__quit" bindtap="closeDialog">
        <icon type="clear" size="37" color="rgb(225, 225, 225)" style="background: #2E2E2E; border-radius: 50%;"/>
      </view>
    </view>
  </view>