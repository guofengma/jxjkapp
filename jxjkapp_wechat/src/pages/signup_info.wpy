<style lang="scss">
#page-signup-info {
}
</style>

<template>
  <view id="page-signup-info">
    <PersonInfo 
      submitBtnText="完成注册"
      @pickedsChange.user="handlePickedsChange"
      @submit.user="handleSubmit">
    </PersonInfo>
  </view>
</template>

<script>
  import wepy from 'wepy'

  import PersonInfo from '@/components/personInfo'

  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '注册信息'
    }
    components = {
      PersonInfo
    }

    mixins = []

    data = {
      formData: ''
    }

    computed = {
    }

    watch = {
    }

    methods = {
      handlePickedsChange (formData) {
        this.formData = formData
      },
      handleSubmit (formData) {
        this.$_request({
          url: '/patientInfo/',
          method: 'POST',
          data: {
            type: 0,
            userId: this.userId,
            ...this.formData
          }
        }).then(() => {
          wx.showToast({
            icon: 'success',
            title: '提交成功'
          })
          wx.navigateBack()
        })
      }
    }

    events = {
    }

    onLoad() {
    }
  }
</script>
