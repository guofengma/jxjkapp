  .page-title-wrap {
    margin: 78rpx 0;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
  }

  .input-group + .input-group {
    border-top: 2rpx solid #F2F2F2;
  }
  .btn-wrap {
    button {
      margin-top: 100rpx;
    }
  }
  .captcha-btn {
    width: 86px;
  }
  // .forget-btn {
  //   margin-top: 38rpx;
  //   text-align: center;
  //   color: #B8B8B8;
  // }
