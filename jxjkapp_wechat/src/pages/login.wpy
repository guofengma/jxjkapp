  //   margin-top: 20rpx;
  //   font-size: 13px;
  //   color: #B8B8B8;
  // }
}
</style>

<template>
  <view id="page-login">
    <view class="page-title-wrap">登陆</view>
    <view class="input-box">
      <view class="input-group">
        <input 
          class="input-group__inner"
          type="number"
          value="{{ phone }}" 
          placeholder="请输入手机号"
          bindinput="handleInput('phone')" />
      </view>
      <view 
        class="input-group">
        <input 
          class="input-group__inner"
          value="{{ captcha }}" 
          placeholder="请输入验证码"
          bindinput="handleInput('captcha')"/>
        <button 
          disabled="{{ !phoneIsValid || countdown }}"
          class="captcha-btn input-group__btn flex--center"
          @tap="getCaptcha">{{ countdown || '获取验证码' }}</button>
      </view>
    </view>
    <view class="btn-wrap flex--hcenter">
      <!-- <button 
        wx:if="{{ !inputPsd }}"
        class="primary-btn"
        disabled="{{ !phoneIsValid }}"
        @tap="handleToNext">下一步</button> -->
      <view>
        <button 
          class="primary-btn"
          disabled="{{ !phoneIsValid || !captcha }}"
          @tap="submit">确认登录</button>
        <!-- <view class="forget-btn">
          <text @tap="handleForget">忘记密码<text class="arrow-rt" style="width: 18rpx; height: 18rpx;"></text></text>
        </view> -->
      </view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'

  import {
    validTel
  } from '@/utils/validator'

  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '锦欣健康'
    }
    components = {
    }

    mixins = []

    data = {
      phone: '', // 手机
      captcha: '', // 验证码
      countdown: 0, // 倒计时
      phoneIsValid: false, // 判断手机号码有效性
      inputPsd: false // 是否可输密码
    }

    computed = {
    }

    watch = {
      phone (newVal) {
        console.log('phone', newVal)
        validTel(newVal).then(() => {
          console.log('手机验证ok')
          this.phoneIsValid = true
          this.$apply()
        }).catch(() => {
          console.log('手机验证fail')
          this.phoneIsValid = false
          this.$apply()
        })
      }
    }

    methods = {
      toSignup () {
        wx.navigateTo({
          url: '/pages/signup'
        })
      },
      // 下一步
      handleToNext () {
        this.inputPsd = true
      },
      handleInput (valBind, { detail }) {
        this[valBind] = detail.value
      },
      handleForget () {
        wx.navigateTo({
          url: '/pages/my_psd'
        })
      },
      getCaptcha () {
        console.log('getCaptcha')
        this.$_request({
          url: `/other/sendCode?phone=${this.phone}&type=0`,
          method: 'POST'
        }, true).then(() => {
          wx.showToast({
            title: '验证码发送成功'
          })
          this.countdown = 60
          this.timer = setInterval(() => {
            if (--this.countdown === 0) {
              clearInterval(this.timer)
            }
            this.$apply()
          }, 1000)
        })
      },
      submit () {
        this.$_request({
          url: `/other/loginByCode?phone=${this.phone}&code=${this.captcha}`,
          method: 'POST'
        }, true).then(res => {
          const content = res.content || {}
          if (content.empty) {
            wx.redirectTo({
              url: '/pages/signup_info'
            })
          } else {
            wx.navigateTo({
              url: '/pages/index'
            })
          }
        })
      }
    }

    events = {
    }

    onLoad () {
    }
    onUnload () {
      clearInterval(this.timer)
    }
  }
</script>
