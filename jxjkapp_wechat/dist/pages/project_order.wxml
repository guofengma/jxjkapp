
  <view id="page-index-project-order">
    <view class="project-detail-wrap">
      <image class="project-image" src="{{ photo }}"/>
      <view class="project-name">
        <text>{{ name }}</text>
      </view>
      <view class="project-des">
        <text>{{ description }}</text>
      </view>
    </view>
    <view class="order-btn-wrap flex">
      <view class="disabled-tip flex-item flex--vcenter">
        <view  wx:if="{{ !userInfo.isVip }}" class="flex--center" style="height: 100%;">
          <image src="../assets/images/to-vip.png" style="height: 22rpx; width: 302rpx;"/>
        </view>
      </view>
      <button class="flex-item--none flex--center" disabled="{{ !userInfo.isVip }}" bindtap="handleOrderBtnTap">
        预约项目
      </button>
    </view>
  </view>