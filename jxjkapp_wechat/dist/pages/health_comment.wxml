
  <view id="page-health-comment">
    
  <view class="comp-custom-card">
    <view class="card-inner">
      <view class="card-top">
        <image src="{{ $CustomCard$imageUrl }}" class="card-image"/>
        <view class="card-title">
          <text>{{ $CustomCard$title }}</text>
        </view>
      </view>
      <view class="card-content">
        <view class="comment-content-wrap">
        <view class="flex--center">
          
  <view class="comp-star-comment star-comment-wrap">
    <view class="star-wrap flex--vcenter--sb">
      <block wx:for="{{ $StarComment$total - 0 }}" wx:for-index="$StarComment$index" wx:for-item="$StarComment$item" wx:key="$StarComment$index">
        <view class="star-item" bindtap="$StarComment$pickStar" data-wpypickstar-a="{{ $StarComment$index }}" data-wpypickstar-b="{{ $StarComment$canPicked }}">
          <image  wx:if="{{ $StarComment$value - 1 >= $StarComment$index }}" class="star" src="../assets/images/star-fill.png"/>
          <image  wx:else class="star" src="../assets/images/star-empty.png"/>
        </view>
      </block>
    </view>
    <view class="star-tip flex--center">
      <text>{{ $StarComment$starTip }}</text>
    </view>
  </view>

        </view>
        <view class="textarea-wrap">
          <block  wx:if="{{ canComment }}">
            <textarea placeholder="请输入您的评价" value="{{ textareaValue }}" maxlength="{{ textareaMaxLen }}" bindinput="handleInput">
            </textarea>
            <text class="textarea-count">{{ textareaValue.length }}/{{ textareaMaxLen }}</text>
          </block>
          <block  wx:else>
            <view class="comment-text">
              <text>{{ textareaValue }}</text>
            </view>
            <view class="comment-date flex">
              <text>{{ commentDate }}</text>
            </view>
          </block>
        </view>
      </view>
      </view>
    </view>
    <view class="btn-wrap">
      <button wx:if="{{ canComment }}" class="primary-btn" disabled="{{ commentStar === 0 }}" bindtap="submit">
        立即评价
      </button>
    </view>
  </view>

  </view>