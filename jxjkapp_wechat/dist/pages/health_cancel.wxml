
  <view id="page-health-cancel">
    
  <view class="comp-custom-card">
    <view class="card-inner">
      <view class="card-top">
        <image src="{{ $CustomCard$imageUrl }}" class="card-image"/>
        <view class="card-title">
          <text>{{ $CustomCard$title }}</text>
        </view>
      </view>
      <view class="card-content">
        <view class="cancel-content-wrap">
        <view class="textarea-wrap">
          <block  wx:if="{{ canCancel }}">
            <textarea placeholder="请输入您的作废理由" value="{{ textareaValue }}" maxlength="{{ textareaMaxLen }}" bindinput="handleInput">
            </textarea>
            <text class="textarea-count">{{ textareaValue.length }}/{{ textareaMaxLen }}</text>
          </block>
          <block  wx:else>
            <view class="cancel-tip flex--center">
              <text>处理中</text>
            </view>
            <view class="cancel-text">
              <text>{{ textareaValue }}</text>
            </view>
            <view class="cancel-date flex">
              <text>{{ cancelDate }}</text>
            </view>
          </block>
        </view>
      </view>
      </view>
    </view>
    <view class="btn-wrap">
      <button wx:if="{{ canCancel }}" bindtap="submit">
        立即提交
      </button>
    </view>
  </view>

  </view>