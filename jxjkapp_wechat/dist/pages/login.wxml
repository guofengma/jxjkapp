
  <view id="page-login">
    <view class="page-title-wrap">登陆</view>
    <view class="input-box">
      <view class="input-group">
        <input class="input-group__inner" type="number" value="{{ phone }}" placeholder="请输入手机号" bindinput="handleInput" data-wpyhandleinput-a="phone"/>
      </view>
      <view class="input-group">
        <input class="input-group__inner" value="{{ captcha }}" placeholder="请输入验证码" bindinput="handleInput" data-wpyhandleinput-a="captcha"/>
        <button disabled="{{ !phoneIsValid || countdown }}" class="captcha-btn input-group__btn flex--center" bindtap="getCaptcha">{{ countdown || '获取验证码' }}</button>
      </view>
    </view>
