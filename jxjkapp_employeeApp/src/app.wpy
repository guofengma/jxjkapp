<script>
import wepy from 'wepy'
import 'wepy-async-function'
import convertDate from '@/utils/convertDate'

Promise.prototype.finally = function (callback) {
  let P = this.constructor
  return this.then(
    value => P.resolve(callback()).then(() => value),
    reason => P.resolve(callback()).then(() => { throw reason })
  )
}

;(['page', 'component']).forEach(function (item) {
  Object.defineProperties(wepy[item].prototype, {
    '$_request': {
      value (cfg, noLoading) {
        cfg = Object.assign({}, cfg)
        if (!noLoading) {
          wx.showLoading({
            title: '加载中..',
            mask: true
          })
        }
        cfg.url = 'http://182.92.78.118:9001/hospHealth' + cfg.url
        return new Promise(function (resolve, reject) {
          wepy.request(cfg).then(res => {
            return res.data || {}
          }).then(data => {
            resolve(data)
          }).catch((e) => {
            reject(e)
          })
        }).finally(() => {
          wx.hideLoading()
        })
      }
    },
    '$_getPage': {
      value () {
        return this.getCurrentPages().slice(-1)[0]
      }
    },
    '$_getRoute': {
      value () {
        return this.getCurrentPages().slice(-1)[0].route
      }
    },
    '$_convertDate': {
      value (timeStamp) {
        return convertDate(timeStamp)
      }
    }
  })
})
export default class extends wepy.app {
  config = {
    networkTimeout: {
      'request': 30000
    },
    pages: [
      'pages/serviceList',
      'pages/serviceHistory',
      'pages/account',
      'pages/serviceDetail',
      'pages/serviceRecord'
    ],
    window: {
      backgroundTextStyle: 'light',
      navigationBarBackgroundColor: '#9190FF',
      navigationBarTitleText: 'WeChat',
      navigationBarTextStyle: 'white'
    },
    tabBar: {
      selectedColor: '#9190FF',
      list: [{
        'pagePath': 'pages/serviceList',
        'iconPath': './assets/images/service_normal.png',
        'selectedIconPath': './assets/images/service_press.png',
        'text': '服务派单'
      }, {
        'pagePath': 'pages/serviceHistory',
        'iconPath': './assets/images/history_normal.png',
        'selectedIconPath': './assets/images/history_press.png',
        'text': '历史记录'
      }, {
        'pagePath': 'pages/account',
        'iconPath': './assets/images/tab-my.png',
        'selectedIconPath': './assets/images/tab-my-active.png',
        'text': '账号管理'
      }]
    }
  }

  globalData = {
    userInfo: {
      userId: 1
    }
  }

  constructor () {
    super()
    this.use('requestfix')
    this.use('promisify')
  }

  onLaunch() {
    wx.setEnableDebug({
      enableDebug: true
    })
    // wx.reLaunch({
    //   url: '/pages/serviceDetail'
    // })
  }
}
</script>
