<style lang="scss">
// @import '../assets/style/variables/theme.scss';
#page-login {
  padding-top: 78rpx;
  .page-title-wrap {
    margin: 0 0 78rpx 0;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
  }
}
</style>

<template>
  <view id="page-login">
    <view wx:if="{{ !token }}">
      <LoginInput 
        title="登录"
        submitBtnText="确认登录" 
        :value.sync="formData"
        @submit.user="handleLogin"/>
    </view>
    <view wx:else>
      <Logout 
        submitBtnText="退出登录" 
        :value.sync="formData"
        @submit.user="handleLogout"/>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import LoginInput from '@/components/loginInput'
  import Logout from '@/components/logout'
  
  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '账号管理'
    }
    components = {
      LoginInput: LoginInput,
      Logout: Logout
    }

    mixins = []

    data = {
    }

    computed = {
      token () {
        return this.$parent.globalData.token
      }
    }

    watch = {
    }

    methods = {
      handleLogout () {
        this.$_syncUserData({
          token: null,
          userInfo: null
        })
        wx.showToast({
          title: '注销成功'
        })
      },
      handleLogin (formData) {
        this.$_request({
          url: `/other/doctorLogin?account=${formData.account}&password=${formData.password}`,
          method: 'POST'
        }, true).then(content => {
          this.$_syncUserData({
            token: content,
            userInfo: {}
          })
          wx.showToast({
            title: '登录成功'
          })
          wx.switchTab({
            url: '/pages/serviceList'
          })
        })
      }
    }

    events = {
    }

    onLoad () {
      console.log(this)
    }
  }
</script>
