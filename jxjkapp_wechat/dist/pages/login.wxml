
  <view id="page-login">
    <view class="page-title-wrap">登陆</view>
    <view class="input-box">
      <view class="input-group">
        <input class="input-group__inner" type="number" value="{{ phone }}" placeholder="请输入手机号" bindinput="handleInput" data-wpyhandleinput-a="phone"/>
      </view>
      <view  wx:if="{{ inputPsd }}" class="input-group">
        <input class="input-group__inner" password="{{ true }}" value="{{ psd }}" placeholder="请输入密码" bindinput="handleInput" data-wpyhandleinput-a="psd"/>
      </view>
    </view>
    <view class="btn-wrap flex--hcenter">
      <button  wx:if="{{ !inputPsd }}" class="primary-btn" disabled="{{ !phoneIsValid }}" bindtap="handleToNext">下一步</button>
      <view wx:else>
        <button class="primary-btn" disabled="{{ !phoneIsValid || !psd }}">确认登录</button>
        <view class="forget-btn">
          <text bindtap="handleForget">忘记密码<text class="arrow-rt" style="width: 18rpx; height: 18rpx;"/></text>
        </view>
      </view>
    </view>
  </view>