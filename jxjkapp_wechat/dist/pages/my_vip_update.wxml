
  <view id="page-my-vip-update">
    <block wx:for="{{ ITEMS }}" wx:for-index="index" wx:for-item="item" wx:key="index">
      <view class="update-item flex--vcenter--sb">
        <text class="item-label">{{ item.label }}</text>
        <picker value="{{ pickedIndex[item.picker.valueBind] }}" range="{{ lists[item.picker.rangeBind] }}" range-key="label" bindchange="handlePickerChange" data-wpyhandlepickerchange-a="{{ item.picker.valueBind }}" data-wpyhandlepickerchange-b="{{ item.picker.rangeBind }}">
          <view class="item-value">
            <text>{{ pickeds[item.picker.valueBind] }}</text>
            <view class="arrow-rt"/>
          </view>
        </picker>
      </view>
    </block>
  </view>