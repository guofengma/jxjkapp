
  <view id="page-health-appraise">
    
  <view class="comp-custom-card">
    <view class="card-inner">
      <view class="card-top">
        <image src="{{ $CustomCard$imageUrl }}" class="card-image"/>
        <view class="card-title">
          <text>{{ $CustomCard$title }}</text>
        </view>
      </view>
      <view class="card-content">
        <view class="appraise-content-wrap">
        <view class="textarea-wrap">
          <textarea placeholder="请输入您的评价" value="{{ textareaValue }}" maxlength="{{ textareaMaxLen }}" bindinput="handleInput">
          </textarea>
          <text class="textarea-count">{{ textareaValue.length }}/{{ textareaMaxLen }}</text>
        </view>
      </view>
      </view>
    </view>
    <div class="btn-wrap">
      <button>立即评价</button>
    </div>
  </view>

  </view>